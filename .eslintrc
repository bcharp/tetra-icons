{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "ecmaFeatures": {
    "destructuring": true,
    "defaultParams": true,
    "arrowFunctions": true,
    "classes": true,
    "blockBindings": true,
    "forOf": true,
    "jsx": true,
    "modules": true,
    "superInFunctions": true,
    "restParams": true,
    "spread": true,
    "templateStrings": true
  },
  "rules": {
    "curly": [
      2,
      "all"
    ],
    "eqeqeq": [
      1,
      "allow-null"
    ],
    "global-strict": [
      0,
      "never"
    ],
    "no-caller": 2,
    "no-cond-assign": [
      1,
      "except-parens"
    ],
    "no-debugger": 2,
    "no-eval": 2,
    "no-extra-parens": 0,
    "no-iterator": 2,
    "no-loop-func": 1,
    "no-multi-str": 2,
    "no-proto": 2,
    "no-script-url": 2,
    "no-undef": 2,
    "no-unused-vars": 0,
    "no-with": 2,
    "semi": [
      2,
      "always"
    ],
    "quotes": [2, "single"],
    "valid-typeof": 2,
    "wrap-iife": [
      2,
      "inside"
    ]
  }
}
